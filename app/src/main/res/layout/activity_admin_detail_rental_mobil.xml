<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".AdminDetailRentalMobil">

    <LinearLayout
        android:id="@+id/layoutToolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/gradient_blue3"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp">

        <ImageView
            android:id="@+id/buttonBack"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:background="@color/transparant"
            android:src="@drawable/ic_back"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="8dp"
            android:text="DETAIL PRODUK"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:typeface="normal" />



    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layoutToolbar"
        app:layout_constraintTop_toBottomOf="@+id/layoutToolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="true"
                android:background="@color/white"
                android:cropToPadding="false"
                android:scaleType="fitCenter"
                android:scrollbarAlwaysDrawHorizontalTrack="true"
                android:scrollbarAlwaysDrawVerticalTrack="false"

                app:srcCompat="@drawable/ic_image" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageView"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:paddingHorizontal="16dp">

                <LinearLayout
                    android:id="@+id/linearLayout1"
                    android:layout_width="match_parent"
                    android:paddingHorizontal="8dp"
                    android:background="@drawable/rounded_corner_blue"
                    android:layout_marginBottom="4dp"
                    android:layout_height="50dp"
                    android:layout_below="@id/imageView"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="Plat Nomor"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/editTextNomor"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/transparant"
                        android:drawablePadding="8dp"
                        android:editable="false"
                        android:gravity="center"
                        android:paddingHorizontal="16dp"
                        android:text="123"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/linearLayout1"
                    android:paddingHorizontal="8dp"
                    android:background="@drawable/rounded_corner_blue"
                    android:layout_marginBottom="4dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="Status"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/editTextStatus"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/transparant"
                        android:drawablePadding="8dp"
                        android:editable="false"
                        android:gravity="left|center_vertical"
                        android:paddingHorizontal="16dp"
                        android:text="Tidak Tersedia"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/linearLayout2"
                    android:paddingHorizontal="8dp"
                    android:background="@drawable/rounded_corner_blue"
                    android:layout_marginBottom="4dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/editTextStatus"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="Nama"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/editTextNama"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/transparant"
                        android:drawablePadding="8dp"
                        android:editable="true"
                        android:gravity="left|center_vertical"
                        android:paddingHorizontal="16dp"
                        android:text="Nama Mobil"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout4"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/linearLayout3"
                    android:paddingHorizontal="8dp"
                    android:background="@drawable/rounded_corner_blue"
                    android:layout_marginBottom="4dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/editTextStatus"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="Harga"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/editTextHarga"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/transparant"
                        android:drawablePadding="8dp"
                        android:editable="true"
                        android:gravity="left|center_vertical"
                        android:paddingHorizontal="16dp"
                        android:text="Harga Sewa"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout5"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/linearLayout4"
                    android:paddingHorizontal="8dp"
                    android:background="@drawable/rounded_corner_blue"
                    android:layout_marginBottom="4dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/editTextStatus"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="Deskripsi"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/editTextWarna"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/transparant"
                        android:drawablePadding="8dp"
                        android:editable="true"
                        android:gravity="left|center_vertical"
                        android:inputType="textMultiLine"
                        android:paddingHorizontal="16dp"
                        android:text="Deskripsi"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey" />

                </LinearLayout>


            </LinearLayout>


            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="50dp"
                android:layout_height="55dp"
                android:layout_below="@id/imageView"
                android:layout_alignEnd="@id/imageView"
                android:layout_marginTop="75dp"
                android:layout_marginEnd="16dp"
                android:backgroundTint="@color/black" />

            <LinearLayout
                android:id="@+id/layoutButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@id/linearLayout"
                android:layout_marginVertical="10dp"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/buttonDelete"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="16dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_background_red"
                    android:text="Hapus"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    tools:layout_editor_absoluteX="70dp"
                    tools:layout_editor_absoluteY="495dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/buttonUpdate"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_background_blue"
                    android:text="Simpan Perubahan"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    tools:layout_editor_absoluteX="70dp"
                    tools:layout_editor_absoluteY="495dp" />

            </LinearLayout>


        </RelativeLayout>


    </ScrollView>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

</RelativeLayout>